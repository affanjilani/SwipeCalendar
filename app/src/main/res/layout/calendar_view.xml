<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/prev"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:src="@mipmap/backbtn"
            android:background="@null" />
        <TextView
            android:id="@+id/monthHeader"
            android:layout_weight="1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="September 2018"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="16dp"/>
        <ImageButton
            android:id="@+id/next"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="60dp"
            android:src="@mipmap/fwdbtn"
            android:background="@null"
            />

    </LinearLayout>

    <!-- Day of Week header -->
    <LinearLayout
        android:paddingTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sunDay"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "SUN"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:background="@null"
            />
        <TextView
            android:id="@+id/mDay"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "M"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:background="@null"
            />
        <TextView
            android:id="@+id/tDay"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "T"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:background="@null"
            />
        <TextView
            android:id="@+id/wDay"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "W"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:background="@null"
            />
        <TextView
            android:id="@+id/thDay"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "TH"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:background="@null"
            />
        <TextView
            android:id="@+id/fDay"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "F"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:background="@null"
            />
        <TextView
            android:id="@+id/satDay"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "SAT"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:background="@null"
            />


    </LinearLayout>


    <!--Single Column gridView for calendar (tried removing margintop and left 6dp(elem_marginTop dimen)-->
    <android.support.v4.view.ViewPager
        android:id="@+id/calendarPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

    </android.support.v4.view.ViewPager>
</LinearLayout>